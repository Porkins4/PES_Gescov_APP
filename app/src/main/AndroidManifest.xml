<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gescov">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".viewlayer.Singletons.GescovApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gescov">
        <activity android:name=".viewlayer.SchoolsActivities.SchoolsAdministration.SchoolGraphActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".viewlayer.ClassroomActivities.StudentsInClassRecord.StudentsInClassRecordActivity" />
        <activity android:name=".viewlayer.chat.createchat.CreateChatActivity"
            android:theme="@style/Theme.Gescov.NoActionBar" />
        <activity android:name=".viewlayer.schoolrequests.SchoolRequestsListActivity" />
        <activity android:name=".viewlayer.UpdateUserProfile.UpdateUserProfileActivity" />
        <activity android:name=".viewlayer.SchoolsActivities.SchoolsAdministration.SchoolDetailsActivity" />
        <activity android:name=".viewlayer.home.DailyTestActivity" />
        <activity android:name=".viewlayer.SignUpAndLogin.LoginActivity" />
        <activity android:name=".viewlayer.SchoolsActivities.SchoolClassroomList.CreateClassroomFormActivity" />
        <activity android:name=".viewlayer.SchoolsActivities.SchoolClassroomList.EditClassroomFormActivity" />
        <activity
            android:name=".viewlayer.ClassroomActivities.ClassroomDistribution.ClassroomDistributionActivity"
            android:theme="@style/Theme.Gescov.NoActionBar" />
        <activity android:name=".viewlayer.ClassroomActivities.MarkPositionInClassroom.MarkPositionInClassroom" />
        <activity android:name=".viewlayer.home.CovidNotificationActivity" />
        <activity
            android:name=".viewlayer.SchoolsActivities.SchoolClassroomList.SchoolClassromListActivity"
            android:label="@string/title_activity_school_classrom_list"
            android:theme="@style/Theme.Gescov.NoActionBar" />
        <activity android:name=".viewlayer.SchoolsActivities.SchoolsAdministration.CreateSchoolFormActivity" />
        <activity android:name=".viewlayer.SchoolsActivities.schooluserslist.SchoolUsersListActivity" />
        <activity
            android:name=".viewlayer.navigation.NavigationMenu"
            android:label="@string/title_activity_navigation_menu"
            android:theme="@style/Theme.Gescov.NoActionBar" />
        <activity
            android:name=".viewlayer.SignUpAndLogin.LoadingProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gescov.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>