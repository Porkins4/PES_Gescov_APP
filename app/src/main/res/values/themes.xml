<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gescov" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Gescov_LinkButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="Theme.Gescov_DarkGreenText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="Theme.Gescov_DeleteButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/delete_red</item>
        <item name="colorPrimaryVariant">@color/delete_red</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="Theme.Gescov.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gescov.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gescov.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme">GescovNoActionBar</style>


    <!-- Chat colors -->
    <color name="chatItemColor">@color/accepted_green</color>
    <color name="sendMessageEdit">#E8E8E8</color>
    <color name="sendMessageButton">@color/teal_200</color>

    <!-- General colors -->
    <color name="normalText">@color/black</color>

    <!-- Login Button Color -->
    <color name="loginButtonColor">#F3F3F3</color>

    <color name = "schedule_button"> #FFFFFF </color>
</resources>