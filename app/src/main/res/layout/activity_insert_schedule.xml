<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewlayer.SchoolsActivities.SchoolClassroomList.classroomSchedule.InsertScheduleActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="680dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:text="@string/monday"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:text="@string/tuesday"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wedensday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:text="@string/wedensday"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:text="@string/thursday"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:text="@string/friday"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/schedule_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schedule_list" />

</androidx.constraintlayout.widget.ConstraintLayout>