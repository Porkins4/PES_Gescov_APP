<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/wall_item_reply_list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="Content"
        app:layout_constraintStart_toStartOf="@+id/wall_item_reply_list_item_date"
        app:layout_constraintTop_toBottomOf="@+id/wall_item_reply_list_item_date" />

    <TextView
        android:id="@+id/wall_item_reply_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="date"
        app:layout_constraintStart_toStartOf="@+id/wall_entry_reply_list_item_author"
        app:layout_constraintTop_toBottomOf="@+id/wall_entry_reply_list_item_author" />

    <TextView
        android:id="@+id/wall_entry_reply_list_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Author"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>