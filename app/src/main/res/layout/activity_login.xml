<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theback"
    tools:context=".viewlayer.SignUpAndLogin.LoginActivity">

    <ImageView
        android:id="@+id/app_logo_login_activity"
        android:layout_width="209dp"
        android:layout_height="281dp"
        android:layout_marginTop="192dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2_2" />

    <Button
        android:id="@+id/sign_in_button_login_activity"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/login_round_button"
        android:backgroundTint="@color/loginButtonColor"
        android:drawableLeft="@drawable/google"
        android:text="@string/sign_in_text"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_logo_login_activity"
        app:layout_constraintVertical_bias="0.64" />


</androidx.constraintlayout.widget.ConstraintLayout>