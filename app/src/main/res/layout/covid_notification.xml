            android:text="Notifica EL TEU positIU"
            android:textSize="14sp" />

        <Button
            android:id="@+id/notifypossible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NOTIFICAR COM POSSIBLE POSITIU"
            android:textSize="14sp" />

        <Button
            android:id="@+id/notifyrecover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NOTIFICA RECUPERACIÃ“"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>